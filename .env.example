# Copy to .env for local development

# Shared
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trendsinusa?schema=public
DATABASE_DIRECT_URL=postgresql://postgres:postgres@localhost:5432/trendsinusa?schema=public

# Worker
WORKER_LOG_LEVEL=info

# Web (client-safe)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# Admin (required to access /admin/*)
ADMIN_BASIC_AUTH_USER=admin
ADMIN_BASIC_AUTH_PASSWORD=change-me
ADMIN_SESSION_SECRET=

# Amazon Product Advertising API (PA API)
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_ASSOCIATE_TAG=

# Future AI/automation placeholders
OPENAI_API_KEY=
AI_COPY_MODEL=gpt-4.1
AI_IMAGE_MODEL=dall-e-3

