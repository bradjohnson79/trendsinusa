{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@sites/*": ["../../sites/*"],
      "@trendsinusa/db": ["./src/__forbidden__/db"],
      "@trendsinusa/worker": ["./src/__forbidden__/worker"],
      "@prisma/client": ["./src/__forbidden__/prisma-client"]
    },
    "types": ["vite/client"],
    "allowJs": false
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
