{
  "name": "trendsinusa",
  "private": true,
  "packageManager": "pnpm@10.4.0",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build && node scripts/validate-boundaries.mjs",
    "build:web": "pnpm --filter @trendsinusa/web build",
    "build:api": "pnpm --filter @trendsinusa/shared build && pnpm --filter @trendsinusa/db prisma:generate && pnpm --filter @trendsinusa/api build",
    "build:admin": "pnpm --filter @trendsinusa/web build",
    "postinstall": "node -e \"process.exit(process.env.PRISMA_SKIP_POSTINSTALL_GENERATE ? 0 : 1)\" || pnpm --filter @trendsinusa/db prisma:generate",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck && node scripts/validate-boundaries.mjs",
    "check:boundaries": "node scripts/validate-boundaries.mjs",
    "check:web-env": "node scripts/validate-web-env-safety.mjs",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "docs:generate": "node scripts/generate-portfolio-docs.mjs",
    "exit:export": "node scripts/export-exit-report.mjs",
    "prisma:generate": "pnpm --filter @trendsinusa/db prisma:generate",
    "prisma:migrate:deploy": "pnpm --filter @trendsinusa/db prisma:migrate:deploy",
    "prisma:migrate:reset": "pnpm --filter @trendsinusa/db prisma:migrate:reset"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3"
  }
}

